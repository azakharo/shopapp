div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12
      .text-xlarge.mb1 Sign Up
    .col-sm-12
      form.form(name='form', ng-submit='register(form)', novalidate='')
        .form-group
          label Name
          input.form-control(type='text', name='name', ng-model='user.name', required='', autofocus='',
          ng-change='onFormChange()')
          p.help-block(ng-show='form.$dirty && form.name.$error.required')
            | Please enter a name

        .form-group
          label Email
          input.form-control(type='email', name='email', ng-model='user.email', required='',
          ng-change='onFormChange()')
          p.help-block(ng-show='form.$dirty && form.email.$error.email')
            | wrong format
          p.help-block(ng-show='form.$dirty && form.email.$error.required')
            | Please enter an email

        .form-group
          label Password
          input.form-control(type='password', name='password', ng-model='user.password', ng-minlength='3', required='',
          ng-change='onFormChange()')
          p.help-block(ng-show='form.$dirty && (form.password.$error.minlength || form.password.$error.required)')
            | Please enter a password (at least 3 characters)

        .form-group.has-error(ng-show="requestError")
          p.help-block {{ requestError }}

        div
          button.btn.btn-success.btn-lg.btn-login(type='submit', ng-disabled='form.$invalid || requestError')
            | Sign Up
          = ' '
          a.btn.btn-default.btn-lg.btn-register(href='/login')
            | Login

        hr
